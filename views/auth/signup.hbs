<h2>Signup</h2>
<div class="container">
  <form action="/auth/signup" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Usuario</label>
      <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp"
        placeholder="Suh_morenitoO_18">
      {{#if messageU }}
      <div class="error-message">{{ messageU }}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="email">E-mail</label>
      <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
        placeholder="Suh_morenitoO_18@yahoo.es">
      {{#if messageE }}
      <div class="error-message">{{ messageE }}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="password">Contraseña</label>
      <input type="password" name="password" class="form-control" id="password" aria-describedby="emailHelp"
        placeholder="Introduce la contraseña">
      {{#if messageC }}
      <div class="error-message">{{ messageC }}</div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirma tu contraseña</label>
      <input type="password" name="confirmPassword" class="form-control" id="password" aria-describedby="emailHelp"
        placeholder="Confirma la contraseña">
      {{#if messageC }}
      <div class="error-message">{{ messageC }}</div>
      {{/if}}
    </div>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <button class="btn btn-primary">Crea la cuenta</button>

    <p class="account-message">
      ¿Ya tienes una cuenta?
      <a href="/auth/login">Login</a>
    </p>
  </form>
  <div class="text-center margin-top">
    <a class="btn btn-dark " href="/"> Volver atrás</a>
  </div>
</div>