<div class="background">

  <h1 class="h1-log-sig"><span class="span-h1">Login</span></h1>

  <div class="container margin-top">

    <form action="/auth/login" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp"
          placeholder="Suh_morenitoO_18">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Introduce tu contraseña">
      </div>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <button class="btn btn-success">Login</button>
      <p class="account-message aux-mes"><span>¿Aún no tienes cuenta?
          <a href="/auth/signup">Crear cuenta</a></span>

      </p>
    </form>
  </div>

  <div class="text-center">
    <a class="btn btn-info" href="/"> Volver atrás</a>
  </div>
</div>