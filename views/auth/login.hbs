<div class="background">

  <form action="/auth/login" method="POST" id="form-container">
    <div class='box'>
      <div class='box-form'>
        <div class='box-login-tab'></div>
        <div class='box-login-title'>
          <div class='i i-login'></div>
          <h2>LOGIN</h2>
        </div>
        <div class='box-login'>
          <div class='fieldset-body' id='login_form'>
            <p class='field'>
              <label for='username'>Usuario</label>
              <input type='text' id='username' name='username' title='Username' placeholder="Suh_morenitoO_18" />
            </p>
            <p class='field'>
              <label for='password'>Contraseña</label>
              <input type='password' id='password' name='password' title='Password'
                placeholder="Introduce tu contraseña" />
              {{#if message }}
              <div class="error-message">{{ message }}</div>
              {{/if}}
              <p class="account-message aux-mes">¿Aún no tienes cuenta?
                <a href="/auth/signup">Crear cuenta</a>
                <a href="/"> Volver atrás</a>
              </p>
              <input type='submit' id='do_login' value='ACCEDER' title='Acceder' />
          </div>
        </div>
      </div>
    </div>
  </form>
</div>